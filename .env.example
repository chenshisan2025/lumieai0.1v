# =================================
# LUMIEAI Environment Configuration
# =================================

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME=LUMIEAI
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://lumieai:password@localhost:5432/lumieai_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Security Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Blockchain Configuration
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
BSC_CHAIN_ID=56
BSC_TESTNET_CHAIN_ID=97

# Smart Contract Addresses (BSC Mainnet)
BNB_TOKEN_ADDRESS=0x...  # BNB token address (native BNB wrapper)
LUM_TOKEN_ADDRESS=0x...  # LUM Token contract address for marketplace payments
REWARD_DISTRIBUTOR_ADDRESS=0x...  # Reward distribution contract
BADGE_NFT_ADDRESS=0x...  # NFT badge contract address
DATA_PROOF_ADDRESS=0x...  # Data proof verification contract
SUBSCRIPTION_MANAGER_ADDRESS=0x9c7920f113B27De6a57bbCF53D6111cbA5532498  # Subscription management contract (BNB payments)

# Subscription Configuration
SUBSCRIPTION_DEFAULT_PLAN_ID=1  # Default subscription plan ID (1=monthly, 2=yearly)

# BSC API Configuration
BSC_API_KEY=...  # BSC API key for enhanced RPC access and transaction verification

# Private Keys (DO NOT COMMIT TO VERSION CONTROL)
DEPLOYER_PRIVATE_KEY=0x...  # Contract deployment wallet private key
SERVER_WALLET_PRIVATE_KEY=0x...  # Server wallet for automated transactions and backend operations

# IPFS Configuration
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token

# AI Services
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Health Data APIs
APPLE_HEALTH_API_KEY=
GOOGLE_FIT_CLIENT_ID=
GOOGLE_FIT_CLIENT_SECRET=
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv
UPLOAD_DIRECTORY=./uploads

# Cache Settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Feature Flags
ENABLE_WEB3_FEATURES=true
ENABLE_AI_CHAT=true
ENABLE_HEALTH_SYNC=true
ENABLE_NFT_BADGES=true
ENABLE_MARKETPLACE=true
ENABLE_ANALYTICS=true

# Third-party Integrations
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1234567890

# Analytics
GOOGLE_ANALYTICS_ID=GA-...
MIXPANEL_TOKEN=...

# Social Login
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
FACEBOOK_APP_ID=...
FACEBOOK_APP_SECRET=...

# Development Tools
DEBUG_TOOLBAR=true
PROFILER_ENABLED=false
SQL_ECHO=false

# Production Settings (Override in production)
# ENVIRONMENT=production
# DEBUG=false
# DATABASE_URL=postgresql://user:pass@prod-db:5432/lumieai_prod
# REDIS_URL=redis://prod-redis:6379/0
# ALLOWED_HOSTS=lumieai.com,api.lumieai.com
# SENTRY_DSN=https://prod-sentry-dsn@sentry.io/project-id